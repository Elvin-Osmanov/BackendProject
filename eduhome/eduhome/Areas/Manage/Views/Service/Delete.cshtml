@model Service
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <h2>Delete</h2>
    <form method="post">
        <div class="form-group">
            <label asp-for="@Model.Name"></label>
            <input class="form-control" asp-for="@Model.Name" readonly>
            <span asp-validation-for="@Model.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Desc"></label>
            <input class="form-control" asp-for="@Model.Desc" readonly>
            <span asp-validation-for="@Model.Desc" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-danger">Do you want to delete?</button>
    </form>
</div>
