@model MemberRegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>sign up</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Register start -->
<div class="register-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 text-center">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-text">
                            <h2>sign up</h2>
                            <span>Please login using account detail bellow.</span>
                        </div>
                        <div class="login-form">
                            <form method="post">
                                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                <input asp-for="@Model.UserName" placeholder="Username">
                                <span class="text-danger" asp-validation-for="@Model.UserName"></span>
                                <input asp-for="@Model.Email" placeholder="Email">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                                <input asp-for="@Model.FullName," placeholder="Full name">
                                <span class="text-danger" asp-validation-for="@Model.FullName"></span>

                                <input asp-for="@Model.Password" placeholder="Password">
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>

                                <input asp-for="@Model.ConfirmPassword," placeholder="Confirm password">
                                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>

                                <div class="button-box">

                                    <button type="submit" class="default-btn">sign up</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Register end -->

@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
