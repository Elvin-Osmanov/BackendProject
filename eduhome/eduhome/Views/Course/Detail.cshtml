@inject Microsoft.AspNetCore.Identity.UserManager<AppUser> usermanager
@model CourseDetailViewModel
@{ AppUser user = User.Identity.IsAuthenticated ? await usermanager.FindByNameAsync(User.Identity.Name) : null;
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<!-- Banner Area Start -->
<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>courses details</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Blog Start -->
<div class="courses-details-area blog-area pt-150 pb-140">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <div class="courses-details">
                    <div class="courses-details-img">
                        <img src="~/uploads/courses/@Model.Course.Photo" alt="courses-details">
                    </div>
                    <div class="course-details-content">
                        <h2>@Model.Course.Name</h2>
                        <h3>Categoty: @Model.Course.Category.Name</h3>
                        <p> @Html.Raw(Model.Course.Desc) </p>
                        <div class="course-details-left">
                            <div class="single-course-left">
                                <h3>about course</h3>
                                <p>@Model.Course.AboutText</p>
                            </div>
                            <div class="single-course-left">
                                <h3>how to apply</h3>
                                <p>@Model.Course.ApplyText</p>
                            </div>
                            <div class="single-course-left">
                                <h3>certification</h3>
                                <p class="margin">@Model.Course.CertificationText</p>
                            </div>
                        </div>
                        <div class="course-details-right">
                            <h3>COURSE FEATURES</h3>
                            <ul>
                                <li>starts <span>@Model.Course.Start.ToString("dd MMMM yyyy")</span></li>
                                <li>duration <span>@Model.Course.Duration</span></li>
                                <li>hours <span>@Model.Course.Hours</span></li>
                                <li>skill level <span>@Model.Course.SkillLevel</span></li>
                                <li>language <span>@Model.Course.Language</span></li>
                                <li>students <span>@Model.Course.StudentCount</span></li>
                            </ul>
                            <h3 class="red">course fee $@Model.Course.Price</h3>
                            <form class="mt-2" method="post" asp-action="create" asp-controller="order">
                                <input type="hidden" name="CourseId" value="@Model.Course.Id" />

                                @if (user != null)
                                {
                                    <div class="mt-2 product-action">
                                        <button style="background: #2C2B5E; color: #fff; text-transform: uppercase; font-family: 'Open Sans', sans-serif; padding: 8px 25px; font-weight: 700; display: inline-block;" type="submit" class="action-cart" title="Apply"> Apply </button>
                                    </div>
                                }

                            </form>
                        </div>
                    </div>
                    <div class="reply-area">
                        <h3>LEAVE A REPLY</h3>
                        <p>I must explain to you how all this a mistaken idea of ncing great explorer of the rut<br> the is lder of human happinescias unde omnis iste natus error sit volptatem </p>
                        <form asp-action="review" method="post">
                            <input type="hidden" name="courseId" value="@Model.Course.Id" />
                            <div class="row">
                                <div class="col-md-12">
                                    <p>Fullname</p>
                                    <input type="text" name="FullName" id="FullName">
                                </div>
                                <div class="col-md-12">
                                    <p>Email</p>
                                    <input type="text" name="email" id="email">
                                </div>
                                <div class="col-md-12">
                                    <p>Subject</p>
                                    <input type="text" name="subject" id="subject">
                                    <p>Massage</p>
                                    <textarea name="message" id="message" cols="15" rows="10"></textarea>
                                </div>
                            </div>
                            <button type="submit" style="background: #2C2B5E; color: #fff; text-transform: uppercase; font-family: 'Open Sans', sans-serif; padding: 8px 25px; font-weight: 700; display: inline-block;">Send Message</button>
                            <p class="form-messege"></p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="blog-sidebar right">
                    <div class="single-blog-widget mb-50">
                        <h3>search</h3>
                        <div class="blog-search">
                            <form id="search" action="#">
                                <input type="search" placeholder="Search..." name="search" />
                                <button type="submit">
                                    <span><i class="fa fa-search"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>categories</h3>
                        <ul>

                            @foreach (var item in Model.Categories)
                            {
                <li><a asp-controller="course" asp-action="index" asp-route-categoryId="@item.Id">@item.Name (@Model.Courses.Where(c => c.Category.Name == item.Name).Count())</a></li>
}

                        </ul>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <div class="single-blog-banner">
                            <a href="blog-details.html" id="blog"><img src="~/assets/img/blog/blog-img.jpg" alt="blog"></a>
                            <h2>best<br> eductaion<br> theme</h2>
                        </div>
                    </div>
                    <div class="single-blog-widget mb-50">
                        <h3>latest post</h3>
                        <div class="single-post mb-30">
                            <div class="single-post-img">
                                <a href="blog-details.html">
                                    <img src="~/assets/img/post/post1.jpg" alt="post">
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                <h4><a href="blog-details.html">English Language Course for you</a></h4>
                                <p>By Alex  /  June 20, 2017</p>
                            </div>
                        </div>
                        <div class="single-post mb-30">
                            <div class="single-post-img">
                                <a href="blog-details.html">
                                    <img src="~/assets/img/post/post2.jpg" alt="post">
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                <h4><a href="blog-details.html">Advance Web Design and Develop</a></h4>
                                <p>By Alex  /  June 20, 2017</p>
                            </div>
                        </div>
                        <div class="single-post">
                            <div class="single-post-img">
                                <a href="blog-details.html">
                                    <img src="~/assets/img/post/post3.jpg" alt="post">
                                    <div class="blog-hover">
                                        <i class="fa fa-link"></i>
                                    </div>
                                </a>
                            </div>
                            <div class="single-post-content">
                                <h4><a href="blog-details.html">English Language Course for you</a></h4>
                                <p>By Alex  /  June 20, 2017</p>
                            </div>
                        </div>
                    </div>
                    <div class="single-blog-widget">
                        <h3>tags</h3>
                        <div class="single-tag">
                            @foreach (var item in Model.Course.CourseTags)
                            {
                <a href="blog-details.html" class="mr-10 mb-10">@item.Tag.Name</a>}

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Blog End -->